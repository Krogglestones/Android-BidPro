<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="wrap_content" android:id="@+id/frameLayout"
             android:background="#DDDDDD">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" app:cardElevation="14dp"
            app:contentPadding="16dp" app:cardCornerRadius="8dp" app:cardUseCompatPadding="true"
            android:id="@+id/cardView"
            app:cardBackgroundColor="#000000" android:fadingEdge="none" android:background="#009B9090">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:text="TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_id"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    android:layout_marginBottom="16dp" app:layout_constraintBottom_toTopOf="@+id/text_seat"
                    android:textColor="#ffffff" app:layout_constraintStart_toEndOf="@+id/textView2"
                    android:layout_marginStart="8dp" android:textAlignment="textEnd" android:textSize="18sp"
                    android:fontFamily="cursive"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_seat"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/text_id"
                    android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/text_fleet"
                    app:layout_constraintStart_toEndOf="@+id/textView3" android:layout_marginStart="8dp"
                    android:textAlignment="textEnd" android:textSize="18sp" android:fontFamily="cursive"
                    android:textColor="#ffffff"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_fleet" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/text_seat"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="16dp" app:layout_constraintBottom_toTopOf="@+id/text_domicile"
                    app:layout_constraintStart_toEndOf="@+id/textView4" android:layout_marginStart="8dp"
                    android:textAlignment="textEnd" android:textSize="18sp" android:fontFamily="cursive"
                    android:textColor="#ffffff"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/text_domicile" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/text_fleet" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textView5" android:layout_marginStart="8dp"
                    android:textAlignment="textEnd" android:textSize="18sp" android:fontFamily="cursive"
                    android:textColor="#ffffff"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/text_status"
                    app:layout_constraintTop_toBottomOf="@+id/text_domicile"
                    android:layout_marginTop="16dp" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="16dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toEndOf="@+id/textView6" android:layout_marginStart="8dp"
                    android:textAlignment="textEnd" android:textSize="18sp" android:fontFamily="cursive"
                    android:textColor="#ffffff"/>
            <TextView
                    android:text="ID"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toTopOf="@+id/textView3" android:textSize="18sp"
                    android:fontFamily="cursive" android:textColor="#ffffff"/>
            <TextView
                    android:text="Seat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" android:layout_marginTop="32dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView2" android:textSize="18sp"
                    android:fontFamily="cursive" android:textColor="#ffffff"/>
            <TextView
                    android:text="Fleet"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView3" android:textSize="18sp"
                    android:fontFamily="cursive" android:textColor="#ffffff"/>
            <TextView
                    android:text="Domicile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView4" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" android:textSize="18sp" android:fontFamily="cursive"
                    android:textColor="#ffffff"/>
            <TextView
                    android:text="Status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView6" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView5" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" android:textSize="18sp" android:fontFamily="cursive"
                    android:textColor="#ffffff"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>